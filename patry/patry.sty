P {margin-top:+1ex; margin-bottom:0; text-indent:+2pc}

span.SourcePN	{
	color:green;
	}

span.FNRef	{
	font-size: xx-small;
	vertical-align: super;
	}

P.toc1, P.toc2, P.toc3 {
	margin-top:0; margin-bottom:0; margin-right:0;
	font-family: Arial, Verdana, sans-serif;
	font-size: 75%;
	}
P.toc1 {
	text-indent:-1ex; margin-left:1ex;
	}
P.toc2 {
	text-indent:-2ex; margin-left:2ex;
	}
P.toc3 {
	text-indent:-3ex; margin-left:3ex;
	}



A:link, A:visited, A:active	{
	color:black;
	text-decoration:none;
	}
A:hover	{
	color:red;
	}


p.Paragraph	{
	text-indent: 0.4in;
	margin: 0in;
	}

p.BlockQuote	{
	margin-left: 0.6in;
	margin-right: 0.6in;
	margin-top: 0in;
	margin-bottom: 0in;
	}

p.DblBlockQuote	{
	margin-left: 0.8in;
	margin-right: 0.7in;
	margin-top: 0in;
	margin-bottom: 0in;
	}

span.footnote	{
	color: gray;
	}

p.Chapter	{
	font-family: Arial, Verdana, sans-serif;
	font-size: x-large;
	text-align: center;
	margin: 0in;
	text-indent: 0in;
	}


h1	{
	font-family: Arial, Verdana, sans-serif;
	font-size: large;
	text-align: center;
	margin-top: 0.2in;
	margin-bottom: 0.1in;
	}

h2	{
	font-family: Arial, Verdana, sans-serif;
	font-size: large;
	font-style: italic;
	text-align: center;
	margin-top: 0.2in;
	margin-bottom: 0.1in;
	}

h3	{
	font-family: Arial, Verdana, sans-serif;
	font-size: medium;
	text-align: center;
	margin-top: 0.2in;
	margin-bottom: 0.1in;
	}

h4	{
	font-family: Arial, Verdana, sans-serif;
	font-size: medium;
	font-style: italic;
	text-align: center;
	margin-top: 0.2in;
	margin-bottom: 0.1in;
	}

h5	{
	font-family: Arial, Verdana, sans-serif;
	font-size: medium;
	margin-top: 0.2in;
	margin-bottom: 0in;
	}

h6	{
	font-family: Arial, Verdana, sans-serif;
	font-size: medium;
	font-style: italic;
	margin-top: 0.2in;
	margin-bottom: 0in;
	}


